<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prueba de diabetes"
        app:layout_constraintBottom_toTopOf="@id/tvEntradaGlucemia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEntradaGlucemia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduce tu nivel actual de glucemia (mg/dl)"
        app:layout_constraintBottom_toTopOf="@id/etNivelGlucemia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
         />

    <EditText
        android:id="@+id/etNivelGlucemia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="0"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@id/tvPreguntaConsciente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvEntradaGlucemia" />

    <TextView
        android:id="@+id/tvPreguntaConsciente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿El sujeto está consciente? (si/no)"
        app:layout_constraintBottom_toTopOf="@id/etDecisionConsciente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etNivelGlucemia"
         />

    <EditText
        android:id="@+id/etDecisionConsciente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@id/buProceder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPreguntaConsciente" />

    <Button
        android:onClick="onClick"
        android:id="@+id/buProceder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proceder"
        android:backgroundTint="#3EACFA"
        app:layout_constraintBottom_toTopOf="@id/tvTextoResultado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etDecisionConsciente" />

    <TextView
        android:id="@+id/tvTextoResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultado:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvResultadoFinal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buProceder"
        android:layout_marginHorizontal="25dp"
         />

    <TextView
        android:id="@+id/tvResultadoFinal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:text="_______"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvTextoResultado"
        app:layout_constraintTop_toBottomOf="@id/buProceder"
        android:textAlignment="center"
         />


</androidx.constraintlayout.widget.ConstraintLayout>